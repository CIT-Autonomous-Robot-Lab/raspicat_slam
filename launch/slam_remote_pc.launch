<?xml version="1.0"?>
<launch>

  <!-- Robot_model import -->
  <arg name="multi_robot_name" default=""/>

  <include file="$(find raspicat_navigation)/launch/include/description.launch.xml">
  </include>


  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="100.0" />
    <!-- 50-->
    <param name="tf_prefix" value="$(arg multi_robot_name)"/>
  </node>

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">

    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>
    <param name="scan" value="urg_lrf_link"/>

    <param name="map_update_interval" value="0.1"/>
    
    <param name="maxUrange" value="10.0"/>
    <param name="maxRange" value="30.0"/>

    <param name="srr" value="0.09"/>
    <param name="srt" value="0.1"/>
    <param name="str" value="0.05"/>
    <param name="stt" value="0.15"/>

    <param name="xmin" value="-10"/>
    <param name="ymin" value="-10"/>
    <param name="xmax" value="10"/>
    <param name="ymax" value="10"/>

    <param name="delta" value="0.3"/>

    <param name="particles" value="240"/>
    <param name="iterations" value="5"/>

    <param name="linearUpdate" value="0.2"/>
    <param name="angularUpdate" value="0.2"/>
    <param name="temporalUpdate" value="0.5"/>
  </node>

  <arg name="rvizconfig" default="$(find raspicat_slam)/launch/config/slam_config.rviz"/>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rvizconfig)"/>
</launch>